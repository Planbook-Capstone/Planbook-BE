############################
# ====== DOCKER HUB ======
############################
DOCKERHUB_USERNAME=your-dockerhub-username

############################
# ====== SHARED (DÙNG CHUNG) ======
############################
# Spring & JPA
SHARED_HIBERNATE_DIALECT=org.hibernate.dialect.MySQLDialect
SHARED_HIBERNATE_DDL_AUTO=update
SHARED_ALLOW_CIRCULAR_REFERENCES=true
SHARED_PATHMATCH_STRATEGY=ANT_PATH_MATCHER

# Eureka (dùng chung cho tất cả service client)
SHARED_EUREKA_DEFAULT_ZONE=http://discovery-server:8761/eureka
SHARED_EUREKA_REGISTER_WITH_EUREKA=true
SHARED_EUREKA_FETCH_REGISTRY=true
SHARED_EUREKA_HEALTHCHECK_ENABLED=true
SHARED_MANAGEMENT_EXPOSURE=health,info
SHARED_MANAGEMENT_HEALTH_DETAILS=always

# Kafka
SHARED_KAFKA_BOOTSTRAP_SERVERS=kafka:29092
SHARED_KAFKA_TOPIC_PLANBOOK=planbook

# Redis
SHARED_REDIS_HOST=redis
SHARED_REDIS_PORT=6379
SHARED_CACHE_TYPE=redis

# Thymeleaf & Mail default
SHARED_THYMELEAF_PREFIX=classpath:/templates/
SHARED_THYMELEAF_SUFFIX=.html
SHARED_THYMELEAF_MODE=HTML
SHARED_MAIL_DEFAULT_ENCODING=UTF-8

# Forward headers & OpenAPI
SHARED_FORWARD_HEADERS_STRATEGY=framework
SHARED_OPENAPI_DOCS_PATH=/v3/api-docs
SHARED_DURATION_SECONDS=3600

# Supabase JWT & Storage (dùng cho các service có dùng Supabase)
SHARED_SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SHARED_SUPABASE_URL=https://your-project.supabase.co
SHARED_SUPABASE_KEY=your-supabase-anon-key
SHARED_SUPABASE_BUCKET=your-bucket-name

# Mail (dùng chung)
SHARED_MAIL_HOST=smtp.gmail.com
SHARED_MAIL_PORT=587
SHARED_MAIL_USERNAME=your-email@gmail.com
SHARED_MAIL_PASSWORD=your-app-password
SHARED_MAIL_SMTP_AUTH=true
SHARED_MAIL_SMTP_STARTTLS_ENABLE=true
SHARED_MAIL_SMTP_STARTTLS_REQUIRED=true
SHARED_MAIL_SMTP_CONNECTIONTIMEOUT=5000
SHARED_MAIL_SMTP_TIMEOUT=5000
SHARED_MAIL_SMTP_WRITETIMEOUT=5000
SHARED_MAIL_HEALTH_ENABLED=false


